generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String        @id @default(uuid()) @db.Uuid
  name                String        @db.VarChar(255)
  email               String        @unique @db.VarChar(255)
  password            String        @db.VarChar(100)
  createdAt           DateTime      @default(now())
  createdFeatureFlags FeatureFlag[]
  logs                AuditLog[]

  @@index([email])
  @@map("users")
}

model AppUser {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  featureFlags UserFeatureFlag[]

  @@map("app_users")
}

model FeatureFlag {
  id          String  @id @default(uuid()) @db.Uuid
  name        String  @unique
  description String?
  enabled     Boolean @default(false)

  targetUsers UserFeatureFlag[]

  userId    String   @db.Uuid
  createdBy User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("feature_flags")
}

model UserFeatureFlag {
  id            String      @id @default(uuid()) @db.Uuid
  featureFlag   FeatureFlag @relation(fields: [featureFlagId], references: [id])
  featureFlagId String      @db.Uuid
  user          AppUser     @relation(fields: [userId], references: [id])
  userId        String      @db.Uuid
  enabled       Boolean     @default(true)

  @@unique([featureFlagId, userId])
  @@map("user_feature_flags")
}

model AuditLog {
  id         String      @id @default(uuid()) @db.Uuid
  action     AuditAction
  entityType EntityType
  entityId   String      @db.Uuid
  oldValues  Json?
  newValues  Json?
  userId     String      @db.Uuid
  executor   User        @relation(fields: [userId], references: [id])
  createdAt  DateTime    @default(now())

  @@map("audit_logs")
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  TOGGLE
}

enum EntityType {
  FEATURE_FLAG
  USER
  APP_USER
}
